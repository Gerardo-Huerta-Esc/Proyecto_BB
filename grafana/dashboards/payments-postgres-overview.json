{
  "uid": "payments-postgres",
  "title": "Payments - Postgres Overview",
  "tags": ["payments", "postgres", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-15m", "to": "now" },
  "panels": [
    {
      "type": "stat",
      "title": "Postgres up",
      "id": 1,
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "refId": "A",
          "expr": "max(pg_up)",
          "legendFormat": "pg_up"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "DB size (payments)",
      "id": 2,
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "refId": "A",
          "expr": "pg_database_size_bytes{datname=\"payments\"}",
          "legendFormat": "payments"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Active connections (payments)",
      "id": 3,
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(pg_stat_database_numbackends{datname=\"payments\"})",
          "legendFormat": "numbackends"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "DB size over time (payments)",
      "id": 4,
      "gridPos": { "x": 0, "y": 4, "w": 18, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "pg_database_size_bytes{datname=\"payments\"}",
          "legendFormat": "payments"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytes" },
        "overrides": []
      }
    }
  ],
  "annotations": { "list": [] }
}
